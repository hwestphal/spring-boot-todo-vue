{
    "private": true,
    "scripts": {
        "build": "tsc && tslint -p . src/**/*.ts src/**/*.js && webpack",
        "build:watch": "webpack --watch",
        "start": "webpack-dev-server",
        "test": "jest",
        "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand",
        "test:integration": "jest --config=jest-integration-config.json",
        "test:integration:debug": "yarn test:debug --config=jest-integration-config.json"
    },
    "devDependencies": {
        "@types/awesomplete": "^1.1.6",
        "@types/express": "^4.11.1",
        "@types/jest": "^23.3.2",
        "@types/node": "10",
        "@types/puppeteer": "^1.10.0",
        "@vue/test-utils": "^1.0.0-beta.12",
        "awesomplete": "^1.1.3",
        "core-js": "^2.5.7",
        "css-loader": "^2.1.0",
        "element-ui": "^2.4.7",
        "empty-module": "^0.0.2",
        "express": "^4.16.2",
        "file-loader": "^3.0.1",
        "jest": "^23.6.0",
        "jest-junit": "^5.1.0",
        "jest-serializer-vue": "^2.0.2",
        "mini-css-extract-plugin": "^0.5.0",
        "node-fetch": "^2.3.0",
        "node-sass": "^4.7.2",
        "puppeteer": "^1.10.0",
        "sass-loader": "^7.1.0",
        "ts-jest": "^23.10.2",
        "ts-loader": "^5.2.1",
        "tslint": "^5.9.1",
        "typescript": "3.5",
        "uglifyjs-webpack-plugin": "^2.1.1",
        "url-loader": "^1.1.1",
        "vue": "^2.5.13",
        "vue-i18n": "^8.1.0",
        "vue-jest": "^3.0.0",
        "vue-loader": "^15.4.2",
        "vue-property-decorator": "^8.0.0",
        "vue-server-renderer": "^2.5.17",
        "vue-template-compiler": "^2.5.13",
        "webpack": "^4.20.2",
        "webpack-cli": "^3.1.1",
        "webpack-dev-server": "^3.1.9",
        "whatwg-fetch": "^3.0.0"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "ts",
            "vue"
        ],
        "moduleNameMapper": {
            "\\.(css|scss)$": "empty-module",
            "^~(.+)$": "../../../node_modules/$1",
            "^@Generated/(.+)$": "<rootDir>/target/generated-sources/$1",
            "^portable-fetch$": "<rootDir>/src/main/typescript/fetch"
        },
        "transform": {
            "^.+\\.(j|t)s$": "ts-jest",
            "^.+\\.vue$": "vue-jest"
        },
        "testMatch": [
            "<rootDir>/src/main/**/*.(spec|test).(js|ts)"
        ],
        "collectCoverage": true,
        "collectCoverageFrom": [
            "<rootDir>/src/main/**/*.(js|ts)",
            "!**/*.d.ts"
        ],
        "coverageDirectory": "target",
        "globals": {
            "ts-jest": {
                "tsConfig": "tsconfig.jest.json"
            }
        },
        "snapshotSerializers": [
            "<rootDir>/node_modules/jest-serializer-vue"
        ],
        "setupTestFrameworkScriptFile": "<rootDir>/jest-setup.js"
    }
}
